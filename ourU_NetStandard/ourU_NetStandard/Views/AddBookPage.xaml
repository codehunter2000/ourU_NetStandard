<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ourU_NetStandard.Views.AddBookPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text= "{Binding ISBN}" />
            <Entry x:Name="bookISBNEntry" Placeholder="ISBN" />
            <Label Text= "{Binding Title}" />
            <Entry x:Name="bookTitleEntry" Placeholder="Title" />
            <Label Text="{Binding Author}" />
            <Entry x:Name="bookAuthorEntry" Placeholder="Author" />
            <Label Text="{Binding Status}" />
            <Entry x:Name="bookStatusEntry" Placeholder="Condition (new, worn, etc.)" />
            <Label Text="{Binding Class}" />
            <Entry x:Name="bookClassEntry" Placeholder="Class" />
            <Label Text= "{Binding Edition}" />
            <Entry x:Name="bookEditionEntry" Placeholder="Edition" />
            <Button Text="List"  />
            <Label x:Name="listLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>