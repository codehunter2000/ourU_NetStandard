<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ourU_NetStandard.Views.SearchPage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
    <StackLayout
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
            <ListView
                BackgroundColor="Silver">
                <ListView.Header>
                    <StackLayout>
                    <SearchBar
                        BackgroundColor="Gray"
                        Placeholder="Search"
                        FontAttributes="Bold"/>
                        <Button  BackgroundColor="White" Text="Random Book Item" TextColor="Black" BorderRadius="1" Clicked="BookItem_Clicked"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.Footer>  
                    <Button
                        BackgroundColor="Gray"
                        FontAttributes="Bold"
                        TextColor="White"
                        Text="+ New Book"
                    Clicked="AddBook_Clicked"/>
                </ListView.Footer>
                </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
